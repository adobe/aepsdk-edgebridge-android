<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EdgeFragment">

    <Button
        android:id="@+id/track_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/track_action_button"
        app:layout_constraintBottom_toTopOf="@id/track_state_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/track_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_state_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_action_button" />

    <Button
        android:id="@+id/trigger_rule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trigger_rule_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_state_button" />

</androidx.constraintlayout.widget.ConstraintLayout>